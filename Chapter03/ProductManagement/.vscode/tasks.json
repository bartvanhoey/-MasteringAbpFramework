{
   "version": "2.0.0",
   "tasks": [
       {
           "label": "buildApi",
           "command": "dotnet",
           "type": "process",
           "args": [
               "build",
               "${workspaceFolder}/src/ProductManagement.HttpApi.Host/ProductManagement.HttpApi.Host.csproj",
               "/property:GenerateFullPaths=true",
               "/consoleloggerparameters:NoSummary"
           ],
           "problemMatcher": "$msCompile"
       },
       {
           "label": "buildDbMigrator",
           "command": "dotnet",
           "type": "process",
           "args": [
               "build",
               "${workspaceFolder}/src/ProductManagement.DbMigrator/ProductManagement.DbMigrator.csproj",
               "/property:GenerateFullPaths=true",
               "/consoleloggerparameters:NoSummary"
           ],
           "problemMatcher": "$msCompile"
       },
       {
           "label": "publish",
           "command": "dotnet",
           "type": "process",
           "args": [
               "publish",
               "${workspaceFolder}/src/ProductManagement.HttpApi.Host/ProductManagement.HttpApi.Host.csproj",
               "/property:GenerateFullPaths=true",
               "/consoleloggerparameters:NoSummary"
           ],
           "problemMatcher": "$msCompile"
       },
       {
           "label": "watch",
           "command": "dotnet",
           "type": "process",
           "args": [
               "watch",
               "run",
               "${workspaceFolder}/src/ProductManagement.HttpApi.Host/ProductManagement.HttpApi.Host.csproj",
               "/property:GenerateFullPaths=true",
               "/consoleloggerparameters:NoSummary"
           ],
           "problemMatcher": "$msCompile"
       }
   ]
}